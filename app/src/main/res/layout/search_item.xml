<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10dp"
        app:cardBackgroundColor="@color/card_background_color"
        app:cardCornerRadius="@dimen/_20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgItem"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="@dimen/_80dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtItemName"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/app_logo_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/_18sp"
                app:layout_constraintStart_toEndOf="@+id/imgItem"
                android:layout_marginStart="@dimen/_5dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Name" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtDescription"
                android:layout_marginTop="@dimen/_5dp"
                app:layout_constraintTop_toBottomOf="@+id/txtItemName"
                app:layout_constraintStart_toEndOf="@+id/imgItem"
                android:maxLines="2"
                android:layout_marginStart="@dimen/_5dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Description" />
            <TextView
                android:layout_width="@dimen/_110dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtPrice"
                android:layout_marginTop="@dimen/_5dp"
                app:layout_constraintTop_toBottomOf="@+id/txtDescription"
                app:layout_constraintStart_toEndOf="@+id/imgItem"
                android:layout_marginStart="@dimen/_5dp"
                android:textSize="@dimen/_24sp"
                android:textColor="@color/black"
                tools:text="$80" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/txtPrice"
                android:background="@color/reg_button_not_pressed"
                android:elevation="@dimen/_20dp"
                android:clickable="true"
                android:src="@drawable/ic_baseline_remove_24"
                app:layout_constraintTop_toTopOf="@id/txtPrice"
                app:layout_constraintBottom_toBottomOf="@id/txtPrice"/>
            <EditText
                android:id="@+id/edtCount"
                android:layout_width="@dimen/_40dp"
                android:layout_height="0dp"
                android:text="@string/starting_item_count"
                android:textColor="@color/black"
                android:gravity="end"
                android:textSize="@dimen/_14sp"
                android:paddingEnd="@dimen/_5dp"
                android:background="@drawable/add_item_edt_background"
                app:layout_constraintStart_toEndOf="@id/btnMinus"
                app:layout_constraintTop_toTopOf="@+id/btnMinus"
                app:layout_constraintBottom_toBottomOf="@id/btnMinus"
                android:layout_marginStart="@dimen/_2dp" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2dp"
                android:elevation="@dimen/_20dp"
                android:clickable="true"
                app:layout_constraintStart_toEndOf="@+id/edtCount"
                android:background="@color/reg_button_not_pressed"
                android:src="@drawable/ic_baseline_add_24"
                app:layout_constraintTop_toTopOf="@id/txtPrice"
                app:layout_constraintBottom_toBottomOf="@id/txtPrice"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddToCart"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_20dp"
                android:layout_marginStart="@dimen/_10dp"
                android:elevation="@dimen/_20dp"
                android:clickable="true"
                app:layout_constraintStart_toEndOf="@+id/btnPlus"
                android:background="@color/reg_button_not_pressed"
                android:text="@string/add_to_cart_text"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/txtPrice"
                app:layout_constraintBottom_toBottomOf="@id/txtPrice"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>