<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_background_color"
    tools:context=".view.SplashScreenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_app_text_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/txtAppName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/app_logo_text_color"
        android:textSize="@dimen/_40sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        app:layout_constraintBottom_toTopOf="@+id/cvCart"
        android:layout_marginBottom="@dimen/_50dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCart"
        android:layout_margin="@dimen/_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/registration_field_background_color"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="wrap_content"
            android:padding="@dimen/_10dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>